{
  "compilerOptions": {
    "lib": ["es2022", "DOM"],
    "target": "es2022",
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "build"
  },
  "exclude": ["node_modules", "build"]
}
